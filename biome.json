{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/_esm",
      "!**/_types",
      "!**/node_modules",
      "!**/build",
      "!**/vendor",
      "!**/*.wasm",
      "!**/*.d.ts.map",
      "!**/*.js.map",
      "!**/test/data/*.json",
      "!**/test/benchmark/compressed/*.json",
      "!**/packages/zstd-wasm-decoder/src/utils.ts",
      "!**/packages/zstd-wasm-decoder/src/zstd-wasm.ts",
      "!**/packages/zstd-wasm-decoder/src/shared.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "includes": ["!**/test/data/*.json"],
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noAssignInExpressions": "off"
      },
      "style": {
        "useConst": "error",
        "noNonNullAssertion": "warn"
      },
      "complexity": {
        "noForEach": "off",
        "noBannedTypes": "off"
      },
      "correctness": {
        "noUnusedVariables": "error"
      },
      "performance": {
        "noAccumulatingSpread": "warn",
        "noBarrelFile": "error",
        "noReExportAll": "error",
        "noDelete": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
