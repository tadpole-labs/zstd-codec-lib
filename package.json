{
  "name": "zstd-codec-lib",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tadpole-labs/zstd-codec-lib.git"
  },
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "test": "pnpm run test:all-runtimes",
    "test:coverage": "vitest run --config test/vitest.config.ts --coverage test/suite.test.ts",
    "test:browsers": "TEST_ADAPTER=browser-all vitest run --config test/vitest.config.ts test/suite.test.ts",
    "test:node": "node --version && vitest run --config test/vitest.config.ts test/suite.test.ts",
    "test:bun": "bun --version && bun vitest run --config test/vitest.config.ts test/suite.test.ts",
    "test:all-runtimes": "pnpm run test:node && pnpm run test:browsers && pnpm run test:bun",
    "test:release": "vitest run --config test/vitest.config.ts test/suite.test.ts && bun vitest run --config test/vitest.config.ts test/suite.test.ts",
    "test:release:browsers": "TEST_ADAPTER=browser-all TEST_VARIANT=web-inlined vitest run --config test/vitest.config.ts test/suite.test.ts && TEST_ADAPTER=browser-all TEST_VARIANT=web-inlined-perf vitest run --config test/vitest.config.ts test/suite.test.ts",
    "build": "pnpm run build:all",
    "build:all": "pnpm run build:decoder",
    "build:wasm": "cd packages/zstd-wasm-decoder && make",
    "build:ts": "cd packages/zstd-wasm-decoder && bun build.ts",
    "build:ts:prep": "cd packages/zstd-wasm-decoder && bun build.ts --prep",
    "build:decoder": "pnpm run build:wasm && pnpm run build:ts",
    "clean": "pnpm run clean:decoder",
    "clean:decoder": "cd packages/zstd-wasm-decoder && rm -rf build src/_esm src/_types src/*.wasm",
    "bench:setup": "bun test/benchmark/setup.ts",
    "bench": "bun test/benchmark/bench.ts",
    "bench:node": "tsx test/benchmark/bench.ts",
    "bench:full": "pnpm run bench:setup && pnpm run bench",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "ci:install": "pnpm install --frozen-lockfile --ignore-scripts",
    "ci:postinstall:browsers": "playwright install --with-deps chromium firefox webkit"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/react"
      ]
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@playwright/test": "1.57.0",
    "@types/bun": "1.3.4",
    "@types/node": "24.10.1",
    "esbuild": "0.27.1",
    "playwright": "1.57.0",
    "terser": "5.44.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  },
  "license": "(Apache-2.0 OR MIT) AND BSD-3-Clause"
}
